<div class="container-fluid">
<br>
<div class="col-5 border border-white bg-info offset-3 text-white negrita">
  <br>
  <h3 class="text-center">Monto asignado por camión</h3><br>
  <div class="row update-deliveries">
    <div class="col-6"> 
      <h5 class="border border-light p-2">-KXRJ78: <%= number_with_delimiter(@KXRJ78.round) %></h5>
      <h5 class="border border-light p-2">-HDKP82: <%=  number_with_delimiter(@HDKP82.round) %></h5>
      <h5 class="border border-light p-2">-JSRK95: <%=  number_with_delimiter(@JSRK95.round) %></h5>
      <h5 class="border border-light p-2">-JYGD30: <%=  number_with_delimiter(@JYGD30.round) %></h5>
    </div>
    <div class="col-6"> 
      <h5 class="border border-light p-2">-KXRJ79: <%=  number_with_delimiter(@KXRJ79.round) %></h5>
      <h5 class="border border-light p-2">-PCYF89: <%=  number_with_delimiter(@PCYF89.round) %></h5>
      <h5 class="border border-light p-2">-PCYF90: <%=  number_with_delimiter(@PCYF90.round) %></h5>
      <h5 class="border border-light p-2">-HPPJ11: <%=  number_with_delimiter(@HPPJ11.round) %></h5>
    </div>
  </div>
</div>


  <div class="row">
    <div class="col-12">
    <br>
    <h3>Asignar transporte a órdenes</h3><br>
        <%= form_with model: @delivery_method, url: update_orders_delivery_methods_path, method: :put do |form| %>
        <table class="table table-striped bg-light">
          <thead class="text-center">
            <tr>
              <th>N° de orden</th>
              <th>Cliente</th>
              <th>Vendedor</th>
              <th>Comuna</th>
              <th>Cantidad desechables</th>
              <th>Cantidad retornables</th>
              <th>Cantidad 3LT</th>
              <th>Cantidad cervezas</th>
              <th>Monto total</th>
              <th>Tipo de orden</th>
              <th>Transporte actual</th>
              <th>Elegir nuevo transporte</th>
            </tr>
          </thead>
          <%= form.fields_for :orders do |orders_form| %>
            <%= render "order_fields", f: orders_form %>
          <% end %>
        </table>
        <div class="actions">
          <%= submit_tag "Agregar transporte", class:"btn btn-info delivery-added", remote: true%>
        </div>
            
      <% end %>
    </div>
  </div>
</div>