<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Client</th>
      <th>User</th>
      <th>Delivery method</th>
      <th>Net amount</th>
      <th>Total iva</th>
      <th>Total extra taxes</th>
      <th>Total amount</th>
      <th>Total packaging amount</th>
      <th>Visit start</th>
      <th>Visit end</th>
      <th>Discount amount</th>
      <th>Discount comment</th>
      <th>Create invoive</th>
      <th>Responsable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.client_id %></td>
        <td><%= order.user_id %></td>
        <td><%= order.delivery_method_id %></td>
        <td><%= order.net_amount %></td>
        <td><%= order.total_iva %></td>
        <td><%= order.total_extra_taxes %></td>
        <td><%= order.total_amount %></td>
        <td><%= order.total_packaging_amount %></td>
        <td><%= order.visit_start %></td>
        <td><%= order.visit_end %></td>
        <td><%= order.discount_amount %></td>
        <td><%= order.discount_comment %></td>
        <td><%= order.create_invoive %></td>
        <td><%= order.responsable %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

