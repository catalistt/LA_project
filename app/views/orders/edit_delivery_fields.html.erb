<br>
<div class="container bg-white border-blue">
  <div class="col-11 m-3">
    <h4 class="text-blue">Datos b√°sicos</h4>
    <%= form_with(model: @order, remote: true) do |form| %>
    <div class="row ml-2">
      <div class="col-12">
        <% if @order.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
            <ul>
              <% @order.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    <div class="row">
      <div class="form-group col-5">
        <%= form.label :responsable, class:"form-label" %>
        <%= form.collection_select :responsable, User.all, :id, :name,{ :include_blank => 'Elegir responsable' }, class:"custom-select" %>
      </div>

      <div class="form-group col-3">
        <%= form.label :visit_start, class:"form-label" %><br>
        <%= form.time_select :visit_start, class: "custom-select" %>
      </div>

      <div class="form-group col-3">
        <%= form.label :visit_end, class:"form-label" %><br>
        <%= form.time_select :visit_end, class: "custom-select" %>
      </div>
    </div>

    <div class="row"> 
      <div class="form-group col-4">
        <%= form.label :discount_amount, class:"form-label" %>
        <%= form.text_field :discount_amount, class: "form-control" %>
      </div>

      <div class="form-group col-4">
        <%= form.label :discount_comment, class:"form-label"%>
        <%= form.text_field :discount_comment, class: "form-control" %>
      </div>
    </div>
    
    <div class="col-4 offset-4">
      <%= form.submit "Ingresar orden", class:"my-3 btn btn-success btn-block"%>
    </div>
  <% end %>
  </div>
</div>
