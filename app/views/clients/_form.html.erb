<div class="row">
  <div class="col-4 offset-4">
    <%= form_with(model: client, local: true) do |form| %>
      <% if client.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

          <ul>
          <% client.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :Razón_social %>
        <%= form.text_field :business_name %>
      </div>

      <div class="form-group">
        <%= form.label :RUT %>
        <%= form.text_field :rut %>
      </div>

      <div class="form-group">
        <%= form.label :Dirección %>
        <%= form.text_field :address %>
      </div>

      <div class="form-group">
        <%= form.label :Vendedor%>
        <%= form.collection_select :user_id, User.all, :id, :name, prompt: true %>
      </div>

      <div class="form-group">
        <%= form.label :Número_de_teléfono%>
        <%= form.text_field :phone_number, type: "tel" %>
      </div>

      <div class="form-group">
        <%= form.label :Horario %>
        <%= form.text_field :schedule %>
      </div>

      <div class="form-group">
        <%= form.label :Acuerdos_especiales %>
        <%= form.text_field :special_agreeement %>
      </div>

      <div class="form-group">
        <%= form.label :Grupo %>
        <%= form.collection_select :group_id, Group.all, :id, :name, prompt: true %>
      </div>

      <div class="actions">
        <%= form.submit "Ingresar cliente", class:"btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>
