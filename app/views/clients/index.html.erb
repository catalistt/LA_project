<p id="notice"><%= notice %></p>

<div class="container">
<h3>Clientes</h3>
  <table class="table table-striped bg-light">
    <thead>
      <tr>
        <th>Razón social</th>
        <th>Rut</th>
        <th>Dirección</th>
        <th>Usuario</th>
        <th>Teléfono</th>
        <th>Horario</th>
        <th>Acuerdos de pagos</th>
        <th>Grupo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.business_name %></td>
          <td><%= client.rut %></td>
          <td><%= client.address %></td>
          <td><%= client.user_id %></td>
          <td><%= client.phone_number %></td>
          <td><%= client.schedule %></td>
          <td><%= client.special_agreement %></td>
          <td><%= client.group_id %></td>
          <td><%= link_to 'Mostrar', client, class:"btn btn-info" %></td>
          <td><%= link_to 'Editar', edit_client_path(client), class:"btn btn-info" %></td>
          <td><%= link_to 'Eliminar', client, method: :delete, data: { confirm: 'Estas seguro/a?' }, class:"btn btn-info" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo cliente', new_client_path, class:"btn btn-info"%>
</div>
