<div class="container">
  <div class="row">
    <div class="offset-3"><br>        
      <h1 class="text-bold">Nuevo método de pago</h1>
      <%= form_with(model: payment_method, local: true) do |form| %>
        <% if payment_method.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(payment_method.errors.count, "error") %> prohibited this payment_method from being saved:</h2>

            <ul>
            <% payment_method.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= form.label :Nombre %><br>
          <%= form.text_field :name %>
        </div>

        <div class="actions"><br>
          <%= form.submit "Crear método de pago", class:"btn btn-success"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
