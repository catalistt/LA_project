 <div class="container">
  <div class="row">   
    <div class="offset-3 col-5">
      <p id="notice"><%= notice %></p>

      <h1 class="offset-2">Métodos de pago</h1>

      <table class="table table-striped bg-light">
        <thead>
          <tr>
            <th>Nombre</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @payment_methods.each do |payment_method| %>
            <tr>
              <td><%= payment_method.name %></td>
              <td><%= link_to 'eliminar', payment_method, method: :delete, data: { confirm: 'Estas seguro/a?'}, class:"btn btn-info" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Nuevo método de pago', new_payment_method_path, class:"btn btn-success" %>
    </div>
  </div>
</div>
