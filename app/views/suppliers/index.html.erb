<div class="container-fluid">
  <div class="row mt-3">
    <div class="col-8">
    <h1>Proveedores</h1>
    <table class="table table-striped bg-light text-center">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Rut</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="text center">
        <% @suppliers.each do |supplier| %>
          <tr>
            <td><%= supplier.name %></td>
            <td><%= supplier.rut %></td>
            <td><%= link_to raw("<span class='fa fa-edit'></span>"), edit_supplier_path(supplier), class:"btn bg-warning" %></td>
            <td><%= link_to raw("<span class='fa fa-trash'></span>"), supplier, method: :delete, data: { confirm: 'Estas seguro/a de eliminar el proveedor?' }, class:"btn bg-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nuevo proveedor', new_supplier_path, class:"btn btn-info" %>
    </div>
  </div>
</div>
