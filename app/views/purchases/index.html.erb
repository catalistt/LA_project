<p id="notice"><%= notice %></p>

<h1>Purchases</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Supplier</th>
      <th>Invoice number</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
      <th>Expiration date</th>
      <th>Second expiration date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.product_id %></td>
        <td><%= purchase.supplier_id %></td>
        <td><%= purchase.invoice_number %></td>
        <td><%= purchase.price %></td>
        <td><%= purchase.quantity %></td>
        <td><%= purchase.subtotal %></td>
        <td><%= purchase.expiration_date %></td>
        <td><%= purchase.second_expiration_date %></td>
        <td><%= link_to 'Show', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

