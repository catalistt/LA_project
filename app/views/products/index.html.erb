<div class="container">
  <h3>Productos</h3>
    <table class="table table-striped bg-light">
      <thead>
        <tr>
          <th>Código</th>
          <th>Nombre</th>
          <th>Categoría</th>
          <th>Envase</th>
          <th>Formato</th>
          <th>Descripción</th>
          <th>Unidad</th>
          <th>Impuesto extra</th>
          <th>Precio ruta</th>
          <th>Stock</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.code %></td>
            <td><%= product.name %></td>
            <td><%= product.category %></td>
            <td><%= product.packaging %></td>
            <td><%= product.format %></td>
            <td><%= product.description %></td>
            <td><%= product.unit %></td>
            <% if product.tax.nil? %>
              <td><%= "N/A" %>
            <% else %>
              <td><%= product.tax.percentage %></td>
            <% end %>
            <td><%= number_with_delimiter(product.standard_price.round) %></td>
            <td><%= product.stock %></td>
            <td><%= link_to raw("<span class='fa fa-eye'></span>"), product, class: "btn btn-info" %></td>
            <td><%= link_to raw("<span class='fa fa-edit'></span>"), edit_product_path(product), class: "btn btn-warning" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<%= link_to 'Agregar nuevo producto', new_product_path, class:"btn btn-success" %>
</div>
   
