<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Cod</th>
      <th>Name</th>
      <th>Type</th>
      <th>Packaging</th>
      <th>Format</th>
      <th>Description</th>
      <th>Unit</th>
      <th>Extra tax</th>
      <th>Stardard price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.cod %></td>
        <td><%= product.name %></td>
        <td><%= product.type %></td>
        <td><%= product.packaging %></td>
        <td><%= product.format %></td>
        <td><%= product.description %></td>
        <td><%= product.unit %></td>
        <td><%= product.extra_tax %></td>
        <td><%= product.stardard_price %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

