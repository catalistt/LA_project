<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-8">
  <h3>Productos</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Código</th>
          <th>Nombre</th>
          <th>Categoría</th>
          <th>Envase</th>
          <th>Formato</th>
          <th>Descripción</th>
          <th>Unidad</th>
          <th>Impuesto extra</th>
          <th>Precio ruta</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.cod %></td>
            <td><%= product.name %></td>
            <td><%= product.category %></td>
            <td><%= product.packaging %></td>
            <td><%= product.format %></td>
            <td><%= product.description %></td>
            <td><%= product.unit %></td>
            <td><%= product.extra_tax %></td>
            <td><%= product.stardard_price %></td>
            <td><%= link_to 'Show', product %></td>
            <td><%= link_to 'Edit', edit_product_path(product) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<br>

