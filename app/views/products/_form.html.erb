<div class="card border-blue">
  <div class="card-body">
    <%= form_with(model: product, local: true) do |form| %>
      <% if product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :code, "Código" %>
        <%= form.text_field :code, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :name, "Nombre" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :cost, "Costo" %>
        <%= form.number_field :cost, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :category, "Categoría" %>
        <%= form.select(:category, categories, {}, { class: "custom-select"})%>
      </div>

      <div class="form-group">
        <%= form.label :packaging, "Envase" %>
        <%= form.select(:packaging, pack, {}, { class: "custom-select"}) %>
      </div>

      <div class="form-group">
        <%= form.label :format, "Formato" %>
        <%= form.text_field :format, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :description, "Descripción" %>
        <%= form.text_field :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :unit, "Tipo de unidad" %>
        <%= form.text_field :unit, class: "form-control" %>
      </div>


      <div class="form-group">
        <%= form.label :units, "Unidades por display" %>
        <%= form.text_field :units, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :extra_tax, "Impuesto extra" %>
        <%= form.select(:extra_tax,  Tax.all.map {|tax| ["#{tax.code} - #{tax.name} (#{tax.percentage*100}%)", tax.percentage] }, { include_blank: 'Seleccionar' }, class: "custom-select") %>
      </div>

      <div class="form-group">
        <%= form.label :Precio_ruta %>
        <%= form.number_field :standard_price, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit "Agregar información", class: "btn btn-success btn-block" %>
      </div>
    <% end %>
  </div>
</div>
