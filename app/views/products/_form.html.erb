  </div>

  <div class="form-group">
    <%= form.label :Nombre %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :Categoria %>
    <%= form.text_field :category %>
  </div>

  <div class="form-group">
    <%= form.label :Envase %>
    <%= form.text_field :packaging %>
  </div>

  <div class="form-group">
    <%= form.label :Formato %>
    <%= form.text_field :format %>
  </div>

  <div class="form-group">
    <%= form.label :Descripción %>
    <%= form.text_field :description %>
  </div>

  <div class="form-group">
    <%= form.label :Unidad %>
    <%= form.text_field :unit %>
  </div>

  <div class="form-group">
    <%= form.label :Impuesto_extra %>
    <%= form.text_field :extra_tax %>
  </div>

  <div class="form-group">
    <%= form.label :Precio_ruta %>
    <%= form.text_field :stardard_price %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>
</div>
