<div class="col-3 offset-1 pt-3">
  <div class="card border-blue">
    <div class="card-body">
      <h1>Registro item</h1>
      <%= form_with(model: resource, local: true) do |form| %>
        <% if resource.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(resource.errors.count, "error") %> prohibited this resource from being saved:</h2>

            <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field pt-2">
          <%= form.label :Nombre_item %>
          <%= form.text_field :name, class:"form-control", required: true%>
        </div>

        <div class="field pt-2">
          <%= form.label :Costo_unitario %>
          <%= form.text_field :amount, class:"form-control", required: true%>
        </div>

        <div class="field pt-2">
          <%= form.label :Categoria %>
          <%= form.select(:group, ["Consumo oficina", "Otros descuentos"], {include_blank:'Seleccionar'}, class: "custom-select", required: true) %>
        </div>

        <div class="actions pt-2">
          <%= form.submit "Agregar item", class:"btn btn-info" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
<br>
