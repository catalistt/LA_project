<p id="notice"><%= notice %></p>

<h1>Delivery Methods</h1>

<table>
  <thead>
    <tr>
      <th>Vehicle plate</th>
      <th>Adquisition date</th>
      <th>Policy number</th>
      <th>Ensurance company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @delivery_methods.each do |delivery_method| %>
      <tr>
        <td><%= delivery_method.vehicle_plate %></td>
        <td><%= delivery_method.adquisition_date %></td>
        <td><%= delivery_method.policy_number %></td>
        <td><%= delivery_method.ensurance_company %></td>
        <td><%= link_to 'Show', delivery_method %></td>
        <td><%= link_to 'Edit', edit_delivery_method_path(delivery_method) %></td>
        <td><%= link_to 'Destroy', delivery_method, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

