<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Vehículos de despacho</h1>

  <table class="table table-striped bg-light">
    <thead>
      <tr>
        <th>Patente</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Peso máximo</th>
        <th>Consumo aproximado</th>
        <th>Última revisión</th>
        <th>Número de emergencia</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @delivery_methods.each do |delivery_method| %>
        <tr>
          <td><%= delivery_method.vehicle_plate %></td>
          <td><%= delivery_method.brand %></td>
          <td><%= delivery_method.vehicle_model %></td>
          <td><%= delivery_method.max_weight %></td>
          <td><%= delivery_method.consume %></td>
          <td><%= delivery_method.last_revision %></td>
          <td><%= delivery_method.emergency_number %></td>
          <td><%= link_to 'Mostrar', delivery_method, class:"btn btn-info" %></td>
          <td><%= link_to 'Editar', edit_delivery_method_path(delivery_method), class:"btn btn-info" %></td>
          <td><%= link_to 'Eliminar', delivery_method, method: :delete, data: { confirm: 'Estás seguro/a de eliminar el registro?' }, class:"btn btn-info" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo vehículo', new_delivery_method_path, class:"btn btn-info" %>
</div>