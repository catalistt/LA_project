<%- if controller_name != 'sessions' %>
  <%= link_to "Iniciar sesión", new_session_path(resource_name) %><br />
  <br>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Registrarse", new_registration_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name) %><br />
<% end %>
<%- if devise_mapping.omniauthable? %>
    <%= link_to "Iniciar sesión con Google", user_google_oauth2_omniauth_authorize_path %><br />
    <%= link_to "Iniciar sesión con facebook", user_facebook_omniauth_authorize_path %><br />
<% end %>
