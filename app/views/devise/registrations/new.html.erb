<div class="row">
  <div class="col-4 offset-4">
    <br>
    <h1>Registrar usuario</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :Nombre %><br>
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <%= f.label :Género %><br>
        <%= f.select :gender, User.genders.keys, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :Fecha_de_nacimiento %><br>
        <%= f.date_select :birthday, :start_year=>1950,:end_year=>2020 %>
      </div>

      <div class="form-group">
        <%= f.label :Dirección %><br>
        <%= f.text_field :address %>
      </div>

      <div class="form-group">
        <%= f.label :RUT %><br>
        <%= f.text_field :rut %>
      </div>

      <div class="form-group">
        <%= f.label :Número_de_contacto %><br>
        <%= f.text_field :phone_number %>
      </div>

      <div class="form-group">
        <%= f.label :Sistema_de_salud %><br>
        <%= f.text_field :health_system %>
      </div>

      <div class="form-group">
        <%= f.label :AFP %><br>
        <%= f.text_field :afp %>
      </div>

      <div class="form-group">
        <%= f.label :Número_de_emergencia %><br>
        <%= f.text_field :emergency_number %>
      </div>

      <div class="form-group">
        <%= f.label :Email %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :Contraseña %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= f.label :Confirmar_contraseña %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Registrarse" %>
      </div>
    <% end %>
<br>
    <%= render "devise/shared/links" %>
  </div>
</div>