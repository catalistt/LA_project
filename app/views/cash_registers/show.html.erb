<div class="container-fluid">
  <div class="row">
    <div class="col-10 offset-1"><br>
      <h2 class="text-bold">Resumen del ingreso</h2> 
      <p>
        <strong>Caja inicial:</strong>
        <%= number_with_delimiter(@cash_register.initial_cash) %>
      </p>

      <p>
        <strong>Caja final:</strong>
        <%= number_with_delimiter(@cash_register.final_cash) %>
      </p>
     

      <%= link_to 'Editar registro', edit_cash_register_path(@cash_register), class:"btn btn-danger"%>
      <%= link_to 'Ver todas las cuadraturas', cash_registers_path, class:"btn btn-info" %>
      <%= link_to 'Cuadrar', new_cash_register_path, class:"btn btn-success" %>
    </div>
  </div>
</div>