              </div>
            </div>
            <div class="col-3 bg-light border pb-2"><br>
              <h4>Entradas de efectivo</h4>
              $<%= number_with_delimiter(@cash_in.round)%>
            </div>
          </div>

          <div class="row">
            <div class="col-3 bg-light border pb-2"><br>
              <h4>Salidas de efectivo</h4>
              $<%= number_with_delimiter(@cash_out.round)%>
            </div>
            <div class="col-3 bg-light border pb-2"><br>
              <h4>Caja final</h4>
              <div class="field">
                <%= form.text_field :final_cash, class:"btn btn-light"%>
              </div>
            </div>
          </div>
          <br>

