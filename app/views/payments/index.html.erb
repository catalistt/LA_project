<div class="row">
  <div class="col-4 offset-4">
    <p id="notice"><%= notice %></p>

    <h1>Pagos recibidos</h1>
    <br>
    <table class="table table-striped bg-light"> 
      <thead>
        <tr>
          <th>Orden asociada</th>
          <th>MÃ©todo de pago</th>
          <th>Monto pagado</th>
          <th>Estado</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @payments.each do |payment| %>
          <tr>
            <td><%= payment.order %></td>
            <td><%= payment.payment_method %></td>
            <td><%= payment.amount_payed %></td>
            <td><%= payment.status %></td>
            <td><%= link_to 'Show', payment %></td>
            <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
            <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Registrar pago', new_payment_path, class:"btn btn-info"   %>
  </div>
</div>
