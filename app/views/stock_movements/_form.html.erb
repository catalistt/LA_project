<%= form_with(model: stock_movement, local: true) do |form| %>
  <% if stock_movement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(stock_movement.errors.count, "error") %> prohibited this stock_movement from being saved:</h2>

      <ul>
      <% stock_movement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :Producto, class:"field" %><br> 
    <%= form.select(:product_id, Product.all.map {|product| ["#{product.code} - #{product.name}", product.id] }, {} ,class:"st-product") %>
  </div>

  <div class="form-group">
    <%= form.label :Stock_inicial %>
    <%= form.number_field :initial_stock %>
  </div>

  <div class="form-group">
    <%= form.label :Cantidad_a_añadir %>
    <%= form.number_field :added %>
  </div>

  <div class="form-group">
    <%= form.label :Cantidad_a_quitar %>
    <%= form.number_field :removed %>
  </div>

  <div class="form-group">
    <%= form.label :Stock_final %>
    <%= form.number_field :final_stock %>
  </div>

  <div class="actions">
    <%= form.submit "Añadir cambio de stock", class:"btn btn-info"%><br>
  </div>
<% end %>
