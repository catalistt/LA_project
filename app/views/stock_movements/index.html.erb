<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-8 offset-2">
    <h1>Movimientos de stock</h1>

    <table class="table table-striped bg-light">
      <thead>
        <tr>
          <th>Producto</th>
          <th>Stock inicial</th>
          <th>Cantidad a√±adida</th>
          <th>Cantidad eliminada</th>
          <th>Stock final</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @stock_movements.each do |stock_movement| %>
          <tr>
            <td><%= stock_movement.product_id %></td>
            <td><%= stock_movement.initial_stock %></td>
            <td><%= stock_movement.added %></td>
            <td><%= stock_movement.removed %></td>
            <td><%= stock_movement.final_stock %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nuevo movimiento de stock', new_stock_movement_path, class:"btn btn-info"%>
  </div>
</div>