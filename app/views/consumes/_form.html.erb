          <%= form.select(:resource_id, Resource.all.map {|resource| ["#{resource.name}", resource.id] }, { include_blank: 'Seleccionar' }, class: "custom-select consume-item") %>
        </div>

        <div class="field pt-2">
        <%= form.label :Tipo_de_descuento %>
