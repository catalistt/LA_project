<p id="notice"><%= notice %></p>

<h1>Consumes</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Resource</th>
      <th>Quantity</th>
      <th>Total amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consumes.each do |consume| %>
      <tr>
        <td><%= consume.user_id %></td>
        <td><%= consume.resource_id %></td>
        <td><%= consume.quantity %></td>
        <td><%= consume.total_amount %></td>
        <td><%= link_to 'Show', consume %></td>
        <td><%= link_to 'Edit', edit_consume_path(consume) %></td>
        <td><%= link_to 'Destroy', consume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Consume', new_consume_path %>
